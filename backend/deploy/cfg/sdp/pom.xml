<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>abcxyz.services.messaging.vvs.backend</groupId>
    <artifactId>backend-deploy-parent</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
    <relativePath>../..</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>abcxyz.services.messaging.vvs.backend</groupId>
  <artifactId>VVS_BACK_CFG-CXC17288812</artifactId>
  <name>VVS Backend Configuration SDP</name>
  <packaging>pom</packaging>
  <properties>
    <rpm.installation.root>${ConfigBaseDirectory}/templates</rpm.installation.root>
    <rpm.installation.tn>${rpm.installation.root}/moip/config/tn</rpm.installation.tn>
    <rpm.installation.vmptn>${rpm.installation.root}/moip/config/vmptn</rpm.installation.vmptn>
    <rpm.installation.om>${rpm.installation.root}/moip/config/om</rpm.installation.om>
    <rpm.installation.mcd>${rpm.installation.root}/msgcore/config/da</rpm.installation.mcd>
    <rpm.installation.common>${rpm.installation.root}/moip/config/common</rpm.installation.common>
    <rpm.installation.msgcoreconfig>${rpm.installation.root}/moip/config</rpm.installation.msgcoreconfig>
    <configDirectory>${project.build.directory}/backend-component-${project.version}/resources/config</configDirectory>
    <componentName>vvs_backend_config</componentName>
  </properties>
  <dependencies>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.backend</groupId>
      <artifactId>backend-component</artifactId>
      <type>zip</type>
      <classifier>mio-resource-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.mio</groupId>
      <artifactId>gpgkey</artifactId>
      <classifier>gpgkeybundle</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <!-- This profile will only be activated on a Linux machine -->
      <id>linux-profile</id>
      <activation>
        <os>
          <family>Linux</family>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>abcxyz.services.messaging.vmio.mavenplugins</groupId>
            <artifactId>vmio-packaging-plugin</artifactId>
            <configuration>
              <componentName>vvs_backend_config</componentName>
              <mappings>
                <mapping>
                  <!-- CONTENT OF rpm.installation.vmptn/backend DIRECTORY MUST BE THE SAME AS rpm.installation.tn/backend DIRECTORY -->
                  <!-- So, any changes made to the rpm.installation.tn/backend mapping must also be made to the rpm.installation.vmptn/backend mapping -->
                  <directory>${rpm.installation.tn}/backend/</directory>
                  <sources>
                    <source>
                      <location>${configDirectory}</location>
                      <includes>
                        <include>backend.*</include>
                        <include>logmanager.*</include>
                        <include>moip*</include>
                        <include>trafficevents.*</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.vmptn}/backend/</directory>
                  <sources>
                    <source>
                      <location>${configDirectory}</location>
                      <includes>
                        <include>backend.*</include>
                        <include>logmanager.*</include>
                        <include>moip*</include>
                        <include>trafficevents.*</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.common}</directory>
                  <sources>
                    <source>
                      <location>${configDirectory}</location>
                      <includes>
                        <include>componentservices.cfg</include>
                        <include>customAttributes.*</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.common}/cdrgen</directory>
                  <sources>
                    <source>
                      <location>${configDirectory}/cdrgen</location>
                      <includes>
                        <include>*.cnf</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/home/messaging/installation/vvs</directory>
                  <sources>
                    <source>
                      <location>${basedir}/src/main/installation</location>
                      <includes>
                        <include>*.sh</include>
                        <include>*.pl</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
              </mappings>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>sign</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.build.directory}/mio-public-gpgkey/rpmsign.exp</executable>
                  <arguments>
                    <argument>${project.build.directory}/${componentName}_rpm/RPMS/noarch</argument>
                    <argument>${project.build.directory}/mio-public-gpgkey</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
