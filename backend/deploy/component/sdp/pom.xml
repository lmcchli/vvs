<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>abcxyz.services.messaging.vvs.backend</groupId>
    <artifactId>backend-deploy-parent</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
    <relativePath>../..</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <name>VVS Backend SDP</name>
  <groupId>abcxyz.services.messaging.vvs.backend</groupId>
  <artifactId>VVS_BACKEND-CXC17288811</artifactId>
  <description>This is the SDP for the backend jar. This jar is
  used by MOIP_NTF and MOIP_MAS.\n Do not forget to install the
  config sdp as well for this component
  (MOIP_BACKEND_CFG).</description>
  <packaging>pom</packaging>
  <properties>
    <jar.installation.directory>/opt/msgcore/lib/provisioning</jar.installation.directory>
    <ba.installation.directory>/opt/moip/broadcastannouncement</ba.installation.directory>
    <rpm.alarms.directory>/opt/moip/common/alarms</rpm.alarms.directory>
    <componentName>vvs_backend</componentName>
  </properties>
  <dependencies>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.backend</groupId>
      <artifactId>backend-component</artifactId>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.backend</groupId>
      <artifactId>backend-component</artifactId>
      <type>zip</type>
      <classifier>mio-resource-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.mio</groupId>
      <artifactId>gpgkey</artifactId>
      <classifier>gpgkeybundle</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <!-- This profile will only be activated on a Linux machine -->
      <id>linux-profile</id>
      <activation>
        <os>
          <family>Linux</family>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>abcxyz.services.messaging.vmio.mavenplugins</groupId>
            <artifactId>vmio-packaging-plugin</artifactId>
            <configuration>
              <componentName>vvs_backend</componentName>
              <mappings>
                <mapping>
                  <directory>${jar.installation.directory}</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}</location>
                      <includes>
                        <include>backend-component-*.jar</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${ba.installation.directory}</directory>
                  <filemode>777</filemode>
                  <username>${user}</username>
                  <groupname>${group}</groupname>
                  <sources>
                    <source>
                      <location>${project.build.directory}/backend-component-${project.version}/resources/broadcast</location>
                      <includes>
                        <include>*</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
              </mappings>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>sign</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.build.directory}/mio-public-gpgkey/rpmsign.exp</executable>
                  <arguments>
                    <argument>${project.build.directory}/${componentName}_rpm/RPMS/noarch</argument>
                    <argument>${project.build.directory}/mio-public-gpgkey</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
