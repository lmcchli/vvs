<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>abcxyz.services.messaging.vvs.oamsystem</groupId>
    <artifactId>oamsystem-deploy-parent</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
    <relativePath>../../</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <name>VVS OAM Component SDP</name>
  <artifactId>VVS_OAM-CXC17314202</artifactId>
  <packaging>pom</packaging>
  <properties>
    <componentName>vvs_oam</componentName>
  </properties>
  <dependencies>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.oamsystem</groupId>
      <artifactId>vvs-oamsystem-component</artifactId>
      <type>zip</type>
      <classifier>mio-resource-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.mio</groupId>
      <artifactId>gpgkey</artifactId>
      <classifier>gpgkeybundle</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <!-- This profile will only be activated on a Linux machine -->
      <id>linux-profile</id>
      <activation>
        <os>
          <family>Linux</family>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>abcxyz.services.messaging.vmio.mavenplugins</groupId>
            <artifactId>vmio-packaging-plugin</artifactId>
            <configuration>
              <componentName>vvs_oam</componentName>
              <scriptDir>/opt/msgcore/oam/bin</scriptDir>
              <startCommand>./oam start moip</startCommand>
              <stopCommand>./oam stop moip</stopCommand>
              <cleanCommand>./oam kill moip</cleanCommand>
              <statusCommand>./oam status moip</statusCommand>
              <mappings>
                <mapping>
                  <directory>/opt/msgcore/oam/bin</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}/vvs-oamsystem-component-${project.version}/resources/sh</location>
                      <includes>
                        <include>moip.env</include>
                      </includes>
                      <excludes>
                        <exclude>moip_oam.monitrc</exclude>
                      </excludes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/opt/monit/rc</directory>
		  <directoryIncluded>false</directoryIncluded>
                  <sources>
                    <source>
                      <location>${project.build.directory}/vvs-oamsystem-component-${project.version}/resources/sh</location>
                      <includes>
                        <include>moip_oam.monitrc</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
              </mappings>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>sign</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.build.directory}/mio-public-gpgkey/rpmsign.exp</executable>
                  <arguments>
                    <argument>${project.build.directory}/${componentName}_rpm/RPMS/noarch</argument>
                    <argument>${project.build.directory}/mio-public-gpgkey</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
