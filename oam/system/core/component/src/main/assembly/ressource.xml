<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>mio-resource-assembly</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/sh</directory>
      <includes>
        <include>*</include>
        <include>**/*</include>
      </includes>
      <outputDirectory>/resources/sh</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/perl</directory>
      <includes>
        <include>*</include>
        <include>**/*</include>
      </includes>
      <outputDirectory>/resources/perl</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
