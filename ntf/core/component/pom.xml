            <exclude>**/com/abcxyz/services/moip/ntf/out/sms/SMSReplacingOutdialWhenRoamingTest.java</exclude>
            <exclude>**/com/abcxyz/services/moip/ntf/result/NotificationActionResolverTest.java</exclude>
            <exclude>**/com/mobeon/ntf/text/TemplateTest.java</exclude>
            <exclude>**/com/mobeon/ntf/text/TemplateBytesTest.java</exclude>
            <exclude>**/com/mobeon/ntf/out/outdial/MfsEventStoreTest.java</exclude>
            <exclude>**/com/mobeon/ntf/out/sms/SMSConfigWrapperTest.java</exclude>
            <exclude>**/com/mobeon/ntf/phonedetection/PhoneStatusTest.java</exclude>
