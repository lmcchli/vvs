    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <encoding>ISO-8859-1</encoding>
          <excludes>
            <exclude>com/mobeon/common/commands/test/*.java</exclude>
            <exclude>com/mobeon/common/storedelay/test/*.java</exclude>
            <exclude>com/mobeon/common/soap/test/*.java</exclude>
