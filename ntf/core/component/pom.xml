            <exclude>**/com/abcxyz/services/moip/ntf/coremgmt/NtfCmnManagerTest.java</exclude>
            <exclude>**/com/abcxyz/services/moip/ntf/coremgmt/NtfEventTest.java</exclude>
            <exclude>**/com/abcxyz/services/moip/ntf/coremgmt/NtfMessageServiceTest.java</exclude>
            <exclude>**/com/abcxyz/services/moip/ntf/coremgmt/NtfRetryEventHandlerTest.java</exclude>
            <exclude>**/com/abcxyz/services/moip/ntf/email/NotificationEmailTest.java</exclude>
            <exclude>**/com/abcxyz/services/moip/ntf/logging/NtfLogAgentTest.java</exclude>
            <exclude>**/com/abcxyz/services/moip/ntf/mail/UserMailboxTest.java</exclude>
