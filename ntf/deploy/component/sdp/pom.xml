<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>abcxyz.services.messaging.vvs.ntf</groupId>
    <artifactId>ntf-deploy-parent</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
    <relativePath>../../</relativePath>
  </parent>
  <artifactId>VVS_NTF-CXC17288771</artifactId>
  <name>NTF Component SDP</name>
  <packaging>pom</packaging>
  <properties>
    <componentName>vvs_ntf</componentName>
  </properties>
  <dependencies>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.ntf</groupId>
      <artifactId>ntf-component</artifactId>
 </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.ntf</groupId>
      <artifactId>ntf-component</artifactId>
      <type>zip</type>
      <classifier>mio-resource-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.msgcore.oe</groupId>
      <artifactId>oe-common</artifactId>
      <type>zip</type>
      <classifier>mio-resource-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.msgcore</groupId>
      <artifactId>cassandra-client</artifactId>
      <type>zip</type>
      <classifier>mio-resource-assembly</classifier>
      <version>${MessageCore.version}</version>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.mio</groupId>
      <artifactId>gpgkey</artifactId>
      <classifier>gpgkeybundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
    </dependency>
   <dependency>
    <groupId>org.apache.logging.log4j</groupId>
    <artifactId>log4j-1.2-api</artifactId>
   </dependency>
  </dependencies>
  <profiles>
    <profile>
      <!-- This profile will only be activated on a Linux machine -->
      <id>linux-profile</id>
      <activation>
        <os>
          <family>Linux</family>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>abcxyz.services.messaging.vmio.mavenplugins</groupId>
            <artifactId>vmio-packaging-plugin</artifactId>
            <configuration>
              <componentName>vvs_ntf</componentName>
              <scriptDir>/opt/moip/ntf/bin</scriptDir>
              <startCommand>./ntf start</startCommand>
              <stopCommand>./ntf stop</stopCommand>
              <cleanCommand>./ntf kill</cleanCommand>
              <statusCommand>./ntf status</statusCommand>
              <mappings>
                <mapping>
                  <directory>/opt/moip/ntf/bin</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}/ntf-component-${project.version}/resources/sh</location>
                      <includes>
                        <include>*</include>
                      </includes>
                      <excludes>
                        <exclude>ntf.monitrc</exclude>
                      </excludes>
                    </source>
                    <source>
                      <location>${project.build.directory}/oe-common-${MessageCore.version}/resources/sh</location>
                      <includes>
                        <include>ctrlScriptLib</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/opt/moip/ntf/lib</directory>
                  <directoryIncluded>false</directoryIncluded>
                  <sources>
                    <source>
                      <location>${project.build.directory}/cassandra-client-${MessageCore.version}/resources/config</location>
                      <includes>
                        <include>application.conf</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/opt/monit/rc</directory>
		  <directoryIncluded>false</directoryIncluded>
                  <sources>
                    <source>
                      <location>${project.build.directory}/ntf-component-${project.version}/resources/sh</location>
                      <includes>
                        <include>ntf.monitrc</include>
                      </includes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/opt/moip/ntf/lib</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}</location>
                      <includes>
                        <include>*.jar</include>
                      </includes>
                      <excludes>
                        <exclude>asn1rt-jme-ber-*.jar</exclude>
                        <exclude>asn1rt-jme-per-*.jar</exclude>
                        <exclude>avalon-framework-*.jar</exclude>
                        <exclude>junit-*.jar</exclude>
                        <exclude>logkit-*.jar</exclude>
                        <exclude>mcc_pds-*.jar</exclude>
                      </excludes>
                    </source>
                  </sources>
                </mapping>
              </mappings>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>sign</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.build.directory}/mio-public-gpgkey/rpmsign.exp</executable>
                  <arguments>
                    <argument>${project.build.directory}/${componentName}_rpm/RPMS/noarch</argument>
                    <argument>${project.build.directory}/mio-public-gpgkey</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
