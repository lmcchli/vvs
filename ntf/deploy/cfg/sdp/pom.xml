<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>abcxyz.services.messaging.vvs.ntf</groupId>
    <artifactId>ntf-deploy-parent</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
    <relativePath>../../</relativePath>
  </parent>
  <artifactId>VVS_NTF_CFG-CXC17288772</artifactId>
  <name>NTF Configuration SDP</name>
  <description>The configuration files for the NTF component</description>
  <packaging>pom</packaging>
  <properties>
    <componentName>vvs_ntf_config</componentName>
  </properties>
  <dependencies>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.ntf</groupId>
      <artifactId>ntf-component</artifactId>
      <type>zip</type>
      <classifier>mio-config-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.ntf</groupId>
      <artifactId>ntf-component</artifactId>
      <type>zip</type>
      <classifier>mio-resource-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.ntf</groupId>
      <artifactId>ntf-templateSmsPlugin</artifactId>
      <type>zip</type>
      <classifier>mio-config-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.mio</groupId>
      <artifactId>gpgkey</artifactId>
      <classifier>gpgkeybundle</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <!-- This profile will only be activated on a Linux machine -->
      <id>linux-profile</id>
      <activation>
        <os>
          <family>Linux</family>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>abcxyz.services.messaging.vmio.mavenplugins</groupId>
            <artifactId>vmio-packaging-plugin</artifactId>
            <configuration>
              <componentName>vvs_ntf_config</componentName>
              <mappings>
                <mapping>
                  <directory>/home/messaging/templates/moip/config</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}/ntf-component-${project.version}/config</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/home/messaging/templates/moip/config</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}/ntf-templateSmsPlugin-${project.version}/config</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/home/messaging/templates/moip/mibs</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}/ntf-component-${project.version}/resources/mibs</location>
                    </source>
                  </sources>
                </mapping>
              </mappings>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>sign</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.build.directory}/mio-public-gpgkey/rpmsign.exp</executable>
                  <arguments>
                    <argument>${project.build.directory}/${componentName}_rpm/RPMS/noarch</argument>
                    <argument>${project.build.directory}/mio-public-gpgkey</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
