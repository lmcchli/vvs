<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>abcxyz.services.messaging.vvs.vmp</groupId>
    <artifactId>vmp-deploy-parent</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
    <relativePath>../../</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>abcxyz.services.messaging.vvs.vmp</groupId>
  <artifactId>VVS_VMP_CFG-CXC1731077</artifactId>
  <name>VVS_VMP_CFG</name>
  <packaging>pom</packaging>
  <properties>
    <rpm.installation.directory>/home/messaging/templates/moip/config/vmptn</rpm.installation.directory>
    <rpm.log.install.directory>/home/messaging/templates/moip/logs</rpm.log.install.directory>
    <componentName>vvs_vmp</componentName>
  </properties>
  <dependencies>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.mas</groupId>
      <artifactId>mas-component</artifactId>
      <type>zip</type>
      <classifier>mio-resource-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.vmp</groupId>
      <artifactId>vmp-component</artifactId>
      <type>zip</type>
      <classifier>mio-config-assembly</classifier>
    </dependency>
    <dependency>
      <groupId>abcxyz.services.messaging.mio</groupId>
      <artifactId>gpgkey</artifactId>
      <classifier>gpgkeybundle</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <!-- This profile will only be activated on a Linux machine -->
      <id>linux-profile</id>
      <activation>
        <os>
          <family>Linux</family>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>abcxyz.services.messaging.vmio.mavenplugins</groupId>
            <artifactId>vmio-packaging-plugin</artifactId>
            <configuration>
              <componentName>vvs_vmp</componentName>
              <mappings>
                <mapping>
                  <directory>${rpm.installation.directory}</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}/mas-component-${project.version}/resources/config/tn</location>
                      <excludes>
                        <exclude>mas/*.*</exclude>
                        <exclude>mas</exclude>
                      </excludes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.directory}/mas</directory>
                  <sources>
                    <source>
                      <location>${project.build.directory}/mas-component-${project.version}/resources/config/tn/mas</location>
                      <excludes>
                        <exclude>ComponentConfig.xml</exclude>
                        <exclude>numberAnalyzer.conf</exclude>
                      </excludes>
                    </source>
                    <source>
                      <location>${project.build.directory}/vmp-component-${project.version}/config</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.log.install.directory}/mas</directory>
                </mapping>
              </mappings>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>sign</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.build.directory}/mio-public-gpgkey/rpmsign.exp</executable>
                  <arguments>
                    <argument>${project.build.directory}/${componentName}_rpm/RPMS/noarch</argument>
                    <argument>${project.build.directory}/mio-public-gpgkey</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
