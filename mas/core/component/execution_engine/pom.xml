<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.abcxyz.services.moip</groupId>
    <artifactId>mas</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
  </parent>
  <artifactId>execution_engine</artifactId>
  <name>Execution Engine</name>
  <packaging>jar</packaging>
  <dependencies>
    <dependency>
      <groupId>shiftone</groupId>
      <artifactId>shiftone-cache</artifactId>
    </dependency>
    <dependency>
      <groupId>xpp3</groupId>
      <artifactId>xpp3</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-aop</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-asm</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-aspects</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-beans</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context-support</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-expression</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-instrument</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-instrument-tomcat</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-jdbc</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-jms</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-orm</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-oxm</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-struts</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-tx</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-web</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-webmvc-portlet</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <testFailureIgnore>true</testFailureIgnore>
          <forkMode>pertest</forkMode>
          <disableXmlReport>true</disableXmlReport>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*Tests.java</include>
          </includes>
          <excludes>
            <exclude>**/*AbstractTest.java</exclude>
            <exclude>**/*AbstractTests.java</exclude>
            <exclude>**/*Case*</exclude>
            <exclude>**/ApplicationPlatformAccessTest.java</exclude>
            <!-- Some weird error -->
            <exclude>**/DialogTerminateTest.java</exclude>
            <!-- Not implemented -->
            <exclude>**/DialogEventFactoryTest.java</exclude>
            <!-- Not implemented -->
            <exclude>**/ErrorSemanticFactoryTest.java</exclude>
            <!-- Not implemented -->
            <exclude>**/CCXMLtoComponentsFilterTest.java</exclude>
            <!-- Not implemented -->
            <exclude>**/CCXMLtoVXMLFilterTest.java</exclude>
            <!-- Not implemented -->
            <exclude>**/VXMLtoCCXMLFilterTest.java</exclude>
            <!-- Not implemented -->
            <exclude>**/IdGeneratorTest.java</exclude>
            <!-- Not implemented -->
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>../callmanager/interface/com/mobeon/masp/callmanager</source>
                <source>../chargingaccountmanager/interface/com/mobeon/masp/chargingaccountmanager</source>
                <source>../configurationmanager/interface/com/mobeon/masp/configuration</source>
                <source>../eventnotifier/interface/com/mobeon/masp/eventnotifier</source>
                <source>../eventnotifier/interface/com/mobeon/masp/execution_engine</source>
                <source>../execution_engine/interface/com/mobeon/masp/execution_engine</source>
                <source>../externalcomponentregister/interface/com/mobeon/masp/externalcomponentregister</source>
                <source>../logging/interface/com/mobeon/masp/logging</source>
                <source>../mailbox/interface/com/mobeon/masp/mailbox</source>
                <source>../mediaobject/interface/com/mobeon/masp/mediaobject</source>
                <source>../mediaobject/interface/com/mobeon/masp/mediahandler</source>
                <source>../mediacontentmanager/interface/com/mobeon/masp/mediacontentmanager</source>
                <source>../mediatranslationmanager/interface/com/mobeon/masp/mediatranslationmanager</source>
                <source>../message_sender/interface/com/mobeon/masp/message_sender</source>
                <source>../numberanalyzer/interface/com/mobeon/masp/numberanalyzer</source>
                <source>../operateandmaintainmanager/interface/com/mobeon/masp/operateandmaintainmanager</source>
                <source>../profilemanager/interface/com/mobeon/masp/profilemanager</source>
                <source>../stream/interface/com/mobeon/masp/stream</source>
                <source>../servicerequestmanager/interface/com/mobeon/masp/servicerequestmanager</source>
                <source>../trafficeventsender/interface/com/mobeon/masp/trafficeventsender</source>
                <source>../util/interface/com/mobeon/masp/util</source>
                <source>../util/src/com/mobeon/masp/util/component</source>
              </sources>
            </configuration>
          </execution>
          <execution>
            <id>add-test-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-test-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/com/mobeon/masp/util/url</source>
                <source>src/com/mobeon/masp/util/execution_engine</source>
                <source>../mediacontentmanager/src/com/mobeon/masp/mediacontentmanager</source>
                <source>../mediaobject/src/com/mobeon/masp/mediaobject</source>
                <source>../stream/src/com/mobeon/masp/stream</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>testResources</goal>
            </goals>
            <configuration>
              <outputDirectory>target/test-classes</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <sourceDirectory>src/com/mobeon/masp/execution_engine</sourceDirectory>
    <testSourceDirectory>test/com/mobeon/masp/execution_engine</testSourceDirectory>
    <testResources>
      <testResource>
        <directory>test/com/mobeon/masp/execution_engine</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </testResource>
      <testResource>
        <directory>applications</directory>
      </testResource>
    </testResources>
  </build>
</project>
