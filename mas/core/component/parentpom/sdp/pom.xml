<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>abcxyz.services.messaging.moip</groupId>
    <artifactId>MOIP_SDP_PARENT</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
  </parent>
  <groupId>abcxyz.services.messaging.moip</groupId>
  <artifactId>MOIP_MAS-CXC17288761</artifactId>
  <name>MAS SDP Pom</name>
  <packaging>pom</packaging>
  <dependencies>
    <dependency>
      <groupId>abcxyz.services.messaging.moip</groupId>
      <artifactId>mas-java</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <properties>
    <MAS.directory>../../</MAS.directory>
    <MAS.applications>${MAS.directory}/applications</MAS.applications>
    <MAS.bin>${MAS.directory}/bin</MAS.bin>
    <MAS.lib>${MAS.directory}/lib</MAS.lib>
    <MAS.streamlib>${MAS.directory}/stream/lib</MAS.streamlib>
    <MAS.log>${MAS.directory}/log</MAS.log>
    <MAS.3pp>${MAS.directory}/execution_engine/3pp</MAS.3pp>
    <MAS.target.dir>${MAS.directory}/target</MAS.target.dir>
    <rpm.installation.directory>/apps/mas</rpm.installation.directory>
    <bundlename>${mas}-${project.version}</bundlename>
    <sdpSourceDirectory>${MAS.directory}/../moipabs/sdpparent/src/main/sdp/rpm</sdpSourceDirectory>
  </properties>
  <profiles>
    <profile>
      <!-- // This profile will only be activated on a Linux machine -->
      <id>linux-profile</id>
      <activation>
        <os>
          <family>Linux</family>
        </os>
      </activation>
      <build>
        <plugins>
          <!-- Create the RPM file -->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>rpm-maven-plugin</artifactId>
            <configuration>
              <version>${mio.rpm.version}</version>
              <release>${mio.rpm.release}</release>
              <!-- Get the resources needed for packaging the RPM -->
              <mappings>
                <mapping>
                  <directory>${rpm.installation.directory}/applications</directory>
                  <filemode>755</filemode>
                  <username>${user}</username>
                  <groupname>${group}</groupname>
                  <sources>
                    <source>
                      <location>${MAS.applications}</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.directory}/bin</directory>
                  <filemode>755</filemode>
                  <username>${user}</username>
                  <groupname>${group}</groupname>
                  <sources>
                    <source>
                      <location>${MAS.bin}</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.directory}/lib</directory>
                  <filemode>755</filemode>
                  <username>${user}</username>
                  <groupname>${group}</groupname>
                  <sources>
                    <source>
                      <location>${MAS.lib}</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.directory}/lib</directory>
                  <filemode>755</filemode>
                  <username>${user}</username>
                  <groupname>${group}</groupname>
                  <!-- Include the mas.jar file -->
                  <sources>
                    <source>
                      <location>${MAS.target.dir}/mas.jar</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.directory}/lib</directory>
                  <filemode>755</filemode>
                  <username>${user}</username>
                  <groupname>${group}</groupname>
                  <sources>
                    <source>
                      <location>${MAS.streamlib}</location>
                      <excludes>
                        <exclude>*.dll</exclude>
                      </excludes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>${rpm.installation.directory}/3pp</directory>
                  <filemode>755</filemode>
                  <username>${user}</username>
                  <groupname>${group}</groupname>
                  <sources>
                    <source>
                      <location>${MAS.3pp}</location>
                    </source>
                  </sources>
                </mapping>
              </mappings>
            </configuration>
          </plugin>
          <!-- Copy generated RPM file to a directory before packaging into an SDP -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-resources-plugin</artifactId>
          </plugin>
          <plugin>
            <groupId>com.abcxyz.safade.maven.plugins</groupId>
            <artifactId>maven-safade-plugin</artifactId>
          </plugin>
          <!-- Attach the generated sdp file as packaging type sdp so it can be deployed -->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
