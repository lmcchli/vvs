<?xml version='1.0'?>
<grammar xml:lang="en-GB" version="1.0" root="ROOT">
    <rule id="ROOT" scope="public">
        <item repeat="0-">
            <ruleref uri="#digits"/>
        </item>
    </rule>
    <rule id="digits">
        <one-of>
            <item> one </item>
            <item> two </item>
            <item> three </item>
            <item> four </item>
            <item> five </item>
            <item> six </item>
            <item> seven </item>
            <item> eight </item>
            <item> nine </item>
            <item> ten </item>
            <item> yes </item>
            <item> no </item>
            <item> quit </item>
        </one-of>
    </rule>
</grammar>