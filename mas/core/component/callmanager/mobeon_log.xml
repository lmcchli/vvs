<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{ISO8601} %t %c %5p [SID:%X{session}]  - %m%n"/>
        </layout>
        <!-- <contentResourceProperties class="com.mobeon.logging.SessionFilter"/> -->
    </appender>

    <appender name="ROLLFILE" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="mobeon.log"/>
        <param name="Append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{ISO8601} %c %5p [SID:%X{session}]  - %m%n"/>
        </layout>
        <!-- if session filtering should be used, uncomment the following line -->
        <!-- <contentResourceProperties class="com.mobeon.logging.SessionFilter"/> -->
    </appender>

    <appender name="LOGMONITOR" class="com.webspherious.log4jmonitor.log4j.IntelliJAppender">
            <layout class="org.apache.log4j.PatternLayout">
                <param name="ConversionPattern"
                    value="%d{ISO8601} %c %5p [SID:%X{session}]  - %m%n"/>
            </layout>
            <!-- if session filtering should be used, uncomment the following line -->
            <!-- <contentResourceProperties class="com.mobeon.logging.SessionFilter"/> -->
     </appender>

    <category name="LoggerLogger">
      <priority value="warn" />
        <appender-ref ref="ROLLFILE" />
    </category>

    <category name="com.mobeon.masp.callmanager">
      <priority value="warn" />
        <appender-ref ref="ROLLFILE" />
    </category>

    <category name="gov.nist">
      <priority value="warn" />
        <appender-ref ref="ROLLFILE" />
    </category>

    <root>
        <priority value ="warn" />
        <appender-ref ref="STDOUT" />
       
    </root>


</log4j:configuration>