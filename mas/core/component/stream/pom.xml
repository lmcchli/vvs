<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>abcxyz.services.messaging.vvs.mas</groupId>
    <artifactId>mas-core-parent</artifactId>
    <version>MIO.CP50-SNAPSHOT</version>
    <relativePath>../..</relativePath>
  </parent>
  <name>MAS Stream C++ Code</name>
  <artifactId>mas-stream</artifactId>
  <packaging>pom</packaging>
  <dependencies>
    <dependency>
      <groupId>abcxyz.services.messaging.vvs.mas</groupId>
      <artifactId>mas-component</artifactId>
    </dependency>
  </dependencies>
  <!-- This pom runs the clearmake that builds the C++ code for the native stream handling.  -->
  <profiles>
    <profile>
      <id>makeCC</id>
      <activation>
        <os>
          <name>linux</name>
          <family>Linux</family>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>Pre-Clean CC</id>
                <phase>pre-clean</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks name="pre-clean">
                    <exec dir="./" executable="echo">
                      <arg line="Inside the pre-clean!!!!!!!!!!!!!!!!!!!"/>
                    </exec>
                  </tasks>
                </configuration>
              </execution>
              <execution>
                <id>CompileCC</id>
                <phase>clean</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks name="clean C code">
                    <exec dir="./" executable="make" failonerror="true">
                      <arg line="clean"/>
                    </exec>
                  </tasks>
                </configuration>
              </execution>
              <execution>
                <id>CleanCC</id>
                <phase>compile</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks name="compile C code">
                    <exec dir="./" executable="make" failonerror="true">
                      <arg line=""/>
                    </exec>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.2</version>
            <executions>
              <execution>
                <id>create-assembly</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/mascfg.xml</descriptor>
                  </descriptors>
                  <outputDirectory>target</outputDirectory>
                  <workDirectory>target/assemblyCustom/work</workDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>rpmsdp-attach-sdp</id>
                <phase>package</phase>
                <goals>
                  <goal>attach-artifact</goal>
                </goals>
                <configuration>
                  <artifacts>
                    <artifact>
                      <file>target/${project.artifactId}-${project.version}-mascfg.zip</file>
                      <type>zip</type>
                      <classifier>zip</classifier>
                    </artifact>
                  </artifacts>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>create-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/mascfg.xml</descriptor>
              </descriptors>
              <outputDirectory>target</outputDirectory>
              <workDirectory>target/assemblyCustom/work</workDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>rpmsdp-attach-sdp</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/${project.artifactId}-${project.version}-mascfg.zip</file>
                  <type>zip</type>
                  <classifier>zip</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
